{% extends "PwcSirBundle:Division:left-small-right-large.html.twig" %}
{% form_theme form 'PwcSirBundle:Form:fields.html.twig' %}

{% set title = 'form.general.account.general'|trans %}
{% set subtitle = 'form.general.account.changepw'|trans %}

{% block sidebar %}
    {{ knp_menu_render('PwcSirBundle:Builder:accountMenu', {'currentClass': 'active', 'template': 'PwcSirBundle:Menu:knp_menu.html.twig'}) }}
{% endblock sidebar %}

{% block contentBody %}
<div class="well">
    <p>
        {{ 'form.general.account.complexity'|trans }}
    </p>
    <ul>
        <li>{{ 'form.general.account.compl_rule1'|trans }}</li>
        <li>{{ 'form.general.account.compl_rule2'|trans }}</li>
        <li>{{ 'form.general.account.compl_rule3'|trans }}</li>
        <li>{{ 'form.general.account.compl_rule4'|trans }}</li>
        <li>{{ 'form.general.account.compl_rule5'|trans }}</li>
    </ul>
    <p>
        {{ 'form.general.account.at_least_3'|trans }}
    </p>
    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password" novalidate>
        {{ form_widget(form) }}

        <div class="record_actions">
            <button type="submit" class="btn btn-info">{{ 'form.general.button.save'|trans }}</button>
            <a class="pull-right cancel" href="{{ path('fos_user_profile_show') }}">{{ 'interface.back_to'|trans({}, 'PwcUserBundle') }}</a>
        </div>
    </form>
</div>
{% endblock contentBody %}
