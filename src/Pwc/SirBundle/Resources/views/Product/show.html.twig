{% extends 'PwcSirBundle::base.html.twig' %}

{% block contentHeader %}
    <h1>{{ entity.name|trans }}</h1>
{% endblock contentHeader %}

{% block contentBody %}

<ul class="entity">
    <li class="detail"><label class="pull-left">{{ 'form.label.product.name'|trans }}</label><span class="value">{{ entity.name|trans }}</span></li>
    <li class="detail">
        <label class="pull-left">{{ 'form.label.product.tools'|trans }}</label>
        <ul class="value">
            {% for tool in entity.tools %}
                <li>{{ tool.name }}</li>
            {% else %}-
            {% endfor %}
        </ul>
    </li>
</ul>



<div id="deleteModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="deleteModalLabel">{{ 'form.general.modal.header'|trans }}</h3>
    </div>
    <div class="modal-body">
        <p>{{ 'form.general.modal.delete'|trans({ '%type%' : 'product', '%name%' : 'yo momma' }) }}</p>
    </div>

    <form action="{{ path('product_delete', { 'slug': entity.slug }) }}" method="post">
        {{ form_widget(delete_form) }}
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">{{ 'form.general.modal.cancel'|trans }}</button>
            <button type="submit" class="btn btn-primary">{{ 'form.general.modal.proceed'|trans }}</button>
        </div>
    </form>
</div>


<div class="record_actions">
    <a class="btn btn-info" href= "#deleteModal" role="button" data-toggle="modal">{{ 'form.general.submit.delete'|trans }}</a>
    <a class="pull-right cancel" href="{{ path('product') }}">{{ 'form.general.back'|trans }}</a>
</div>

{% endblock contentBody %}