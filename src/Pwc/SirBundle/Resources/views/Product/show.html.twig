{% extends 'PwcSirBundle::base.html.twig' %}

{% block content %}
<h1>Product</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li class="submit">
        <a class="button" href="{{ path('product_edit', { 'slug': entity.slug }) }}">{{ 'form.general.submit.edit'|trans }}</a>
    </li>
    <li class="delete">
        <form action="{{ path('product_delete', { 'slug': entity.slug }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{{ 'form.general.submit.delete'|trans }}</button>
        </form>
    </li>
    <li class="cancel">
        <a href="{{ path('product') }}">{{ 'form.general.back' | trans() }}</a>
    </li>
</ul>
{% endblock content %}