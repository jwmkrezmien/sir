{% extends 'PwcSirBundle::base.html.twig' %}

{% block contentBody %}
{{ knp_pagination_sortable(pagination, 'Name', 'name') }}

<ul class="entity index">

    {% for entity in pagination %}
    <li class="detail{% if loop.index is odd %} color{% endif %}">
        <a href="{{ path('product_show', { 'slug': entity.slug }) }}">{{ entity.name|trans }}</a>
        <div class="btn-group pull-right">
            <a class="btn dropdown-toggle btn-info btn-mini" data-toggle="dropdown" href="#">Actions &nbsp; &nbsp;&nbsp;<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li icon="icon-pencil" class="current first">
                    <a href="/app_dev.php/product/"><i class="icon-pencil"></i>Edit</a>
                </li>
                <li icon="icon-trash" class="current last">
                    <a href="/app_dev.php/product/">
                    <i class="icon-trash"></i>Delete</a>
                </li>
            </ul>
        </div>
    </li>
    {% endfor %}

    <li class="detail new">
        <i class="icon-plus-sign"></i> <a href="{{ path('product_new') }}">{{ 'form.label.product._new'|trans }}</a>
    </li>
</ul>

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>

{% endblock contentBody %}