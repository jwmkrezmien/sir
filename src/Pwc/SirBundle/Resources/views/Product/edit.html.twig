{% extends 'PwcSirBundle::base.html.twig' %}
{% form_theme edit_form 'PwcSirBundle:Form:fields.html.twig' %}

{% block contentHeader %}
    <h1>Product edit</h1>
{% endblock contentHeader %}

{% block contentBody %}
<form action="{{ path('product_update', { 'slug': entity.slug }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}

    <ul class="record_actions">
        <li class="submit"><button type="submit">{{ 'form.general.submit.edit'|trans }}</button></li>
        <li class="delete">
            <form action="{{ path('product_delete', { 'slug': entity.slug }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">{{ 'form.general.submit.delete'|trans }}</button>
            </form>
        </li>
        <li class="cancel">
            <a href="{{ path('product') }}">{{ 'form.general.back' | trans() }}</a>
        </li>
    </ul>
</form>

{% endblock contentBody %}