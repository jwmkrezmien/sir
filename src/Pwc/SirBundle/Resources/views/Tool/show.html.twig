{% extends 'PwcSirBundle::base.html.twig' %}

{% block contentBody %}
    <ul class="entity">
        <li class="detail"><label class="pull-left">{{ 'form.label.tool.name'|trans }}</label><span class="value">{{ entity.name|trans }}</span></li>
        <li class="detail">
            <label class="pull-left">{{ 'form.label.tool.products'|trans }}</label>
            <ul class="value">
                {% for product in entity.products %}
                    <li>{{ product.name }}</li>
                {% else %}-
                {% endfor %}
            </ul>
        </li>
    </ul>

    <div class="record_actions">
        <a class="btn btn-info" href= "#deleteModal" role="button" data-toggle="modal">{{ 'form.general.button.delete'|trans }}</a>
        <a class="pull-right cancel" href="{{ path('tool') }}">{{ 'form.general.back'|trans }}</a>
    </div>

    {% include "PwcSirBundle:Includes:deleteModal.html.twig" with { 'type': 'tool', 'deleteRoute': path('tool_delete', { 'slug': entity.slug }), 'delete_form': delete_form } %}
{% endblock contentBody %}