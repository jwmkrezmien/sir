{% extends 'PwcSirBundle::base.html.twig' %}
{% form_theme edit_form 'PwcSirBundle:Form:fields.html.twig' %}

{% block content %}
<div id="contentHeader">
    <h1>{{ 'form.label.vulndescription._edit'|trans({'%language%' : entity.language.name|trans }) }}</h1>
</div>

<form action="{{ path('vulndescription_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}

    <ul class="record_actions">
        <li class="submit"><button type="submit">Edit</button></li>
        <li class="delete">
            <form action="{{ path('vulndescription_delete', { 'slug': entity.slug }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
        <li class="cancel">
            <a href="{{ path('vulndescription') }}">Back to the list</a>
        </li>
    </ul>

</form>
{% endblock %}