{% extends 'PwcSirBundle::base.html.twig' %}
{% form_theme edit_form 'PwcSirBundle:Form:fields.html.twig' %}

{% block contentBody %}
    <div class="well">
        <form action="{{ path('description_update', { 'slug': entity.slug }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
            {{ form_widget(edit_form) }}

            <div class="record_actions">
                <button type="submit" class="btn btn-info">{{ 'form.general.button.save'|trans }}</button>
                <a class="pull-right cancel" href="{{ path('vulnerability', { 'slug': vulnerability.slug }) }}">{{ 'form.general.back'|trans }}</a>
            </div>

        </form>
    </div>
{% endblock contentBody %}