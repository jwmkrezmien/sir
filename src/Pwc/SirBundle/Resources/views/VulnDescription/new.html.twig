{% extends 'PwcSirBundle::base.html.twig' %}
{% form_theme form 'PwcSirBundle:Form:fields.html.twig' %}

{% block body %}
<h1>{{ 'vulndescription.new.title' | trans() }}</h1>

<form action="{{ path('vulndescription_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <div class="row"><label for="language">{{ 'vulndescription.form.language' | trans() }}</label><span id="language">{{ language.name | trans() }}</span></div>
    <div class="row"><label for="vulnerability">{{ 'vulndescription.form.vulnerability' | trans() }}</label><span id="vulnerability">{{ vulnerability.name | trans() }}</span></div>

    <ul class="record_actions">
        <li class="submit"><button type="submit">{{ 'form.general.submit.create' | trans() }}</button></li>
        <li class="cancel">
            <a href="{{ path('vulndescription') }}">{{ 'form.general.back' | trans() }}</a>
        </li>
    </ul>
</form>


{% endblock %}