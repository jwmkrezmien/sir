{% import 'PwcSirBundle:Macros:flashes.html.twig' as flashes %}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Security Issue Repository - {% block title %}{% if title is defined %}{{ title }}{% else %}No title set yet{% endif %}{% endblock %}</title>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/js/bootstrap.min.js"></script>
    {% javascripts
    'bundles/pwcsir/js/chosen.jquery.min.js'
    'bundles/pwcsir/js/select2.min.js' output='bundles/pwcsir/js/main.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.no-icons.min.css">

    {% stylesheets
    'bundles/pwcsir/css/chosen.css'
    'bundles/pwcsir/css/select2.css' filter='cssrewrite' output='bundles/pwcsir/css/main.css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}

    <link rel="stylesheet" href="/bundles/pwcsir/css/sir.css" />

</head>

<body>

    {% block body %}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <div class="navbar-content">
                    {{ knp_menu_render('PwcSirBundle:Builder:mainMenu', {'currentClass': 'active', 'template': 'PwcSirBundle:Menu:knp_menu.html.twig'}) }}
                    {{ knp_menu_render('PwcSirBundle:Builder:userMenu', {'template': 'PwcSirBundle:Menu:knp_menu.html.twig'}) }}
                </div>
            </div>
        </div>
    </div>

    <div class="main container">
        <div class="page-header">
            {% block pageHeader %}
            <h1>{% if title is defined %}
                    {{ title|trans }} {% if subtitle is defined %}- {% endif %}
                {% endif %}{{ subtitle|default('No subtitle yet') }}</h1>
            {% endblock pageHeader %}
        </div>
        {% block pageLead %}
        <p class="lead">The Security Issue Repository uses several components that can be managed through this Settings page. These components include the management of Products, Tools and OWASP Lists.</p>
        {% endblock pageLead %}
        <div class="row-fluid">
            <div class="span4">
                {{ knp_menu_render('PwcSirBundle:Builder:settingsMenu', {'currentClass': 'active', 'template': 'PwcSirBundle:Menu:knp_menu.html.twig'}) }}
            </div>
            <div class="span8">
                {{ flashes.show }}
                {% block contentBody %}{% endblock contentBody %}
            </div>
        </div>
    </div>
    {% endblock body %}

</body>

</html>