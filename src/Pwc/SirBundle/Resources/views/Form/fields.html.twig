{% block field_row %}
    {% spaceless %}
        <div class="row">
            {{ form_label(form, label|default(null)) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
        </div>
    {% endspaceless %}
{% endblock field_row %}

{% block choice_widget %}
    {% spaceless %}
        {% if expanded %}
            <div {{ block('widget_container_attributes') }}>
                {% for child in form %}
                    {{ form_widget(child) }}
                    {{ form_label(child) }}
                {% endfor %}
            </div>
        {% else %}
            {%  if select2 %}
                <script>
                    $(document).ready(
                            function() { $( "#{{ id }}" ).select2({
                                {% if empty_value is not none %}placeholder: "{{ empty_value|trans }}{% if required == false %} [{{ 'form.general.optional'|trans }}]{% endif %}",{% endif %}
                                {% if required == false %}allowClear: true,{% endif %}
                            });
                    });
                </script>
                {% endif %}
            <select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
                {% if select2 and empty_value is not empty %}
                    <option value=""></option>
                {% elseif empty_value is not none %} %}
                    <option value="">{{ empty_value|trans }}</option>
                {% endif %}
                {% if preferred_choices|length > 0 %}
                    {% set options = preferred_choices %}
                    {{ block('widget_choice_options') }}
                    {% if choices|length > 0 and separator is not none %}
                        <option disabled="disabled">{{ separator }}</option>
                    {% endif %}
                {% endif %}
                {% set options = choices %}
                {{ block('widget_choice_options') }}
            </select>
        {% endif %}
    {% endspaceless %}
{% endblock choice_widget %}